<Window x:Class="InvestmentCompany.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Label Content="Логин:" />
            <TextBox x:Name="txtLogin" Margin="0,5,0,10" />

            <Label Content="Пароль:" />
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10" />

            <Button Content="Войти" Click="LoginButton_Click" Margin="0,10" Padding="10,5" FontSize="14" />
        </StackPanel>
    </Grid>
</Window>