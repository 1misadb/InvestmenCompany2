<Window x:Class="InvestmentCompany.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="600" Width="400">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <Label Content="Логин:" />
            <TextBox x:Name="txtLogin" Margin="0,5,0,10" />

            <Label Content="Пароль:" />
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10" />

            <Label Content="Название:" />
            <TextBox x:Name="txtName" Margin="0,5,0,10" />

            <Label Content="Адрес:" />
            <TextBox x:Name="txtAddress" Margin="0,5,0,10" />

            <Label Content="Телефон:" />
            <TextBox x:Name="txtPhone" Margin="0,5,0,10" />

            <Label Content="Тип инвестора:" />
            <ComboBox x:Name="cmbInvestorType" Margin="0,5,0,10" DisplayMemberPath="Тип" />

            <Label Content="Роль:" />
            <ComboBox x:Name="cmbRole" Margin="0,5,0,10" DisplayMemberPath="Название" />

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>